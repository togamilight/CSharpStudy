@using MVCDemo.ViewModels.SPA
@model MainViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Single Page Application Index</title>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet"/>
    <script>
        function OpenAddNew() {
            $.get("/SPA/Main/AddNew").then(
                function (r) {
                    $("<div id='DivCreateEmployee'></div>").html(r).
                    dialog({
                        width: 'auto', height: 'auto', modal: true, title: 'Create New Employee',
                        close: function () {
                            $('#DivCreateEmployee').remove();
                        }
                    })
                }
            );
        }
    </script>
</head>
<body>
    <div style="text-align:right">
        Hello, @Model.UserName
        <a href="/Authentication/Logout">Logout</a>
    </div>
    <hr />
    <div id="DivOption">
        @Html.Action("EmployeeList", "Main")
    </div>
    @Html.Partial("Footer", Model.FooterData)
</body>
</html>
